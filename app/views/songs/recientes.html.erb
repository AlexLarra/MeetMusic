<div class="paneldecontrol">
	<%= render "users/formulario" %>
</div>
<div class="principal">
	<table class="table" id="tabla">
			<thead>
			  <tr>
			    <th>Nombre</th>
			    <th>Artista</th>
			    <th>Álbum</th>
			    <th>Duracion</th>
			    <th>Reprod</th>
			    <th></th>
			    <th></th>
			    <th></th>
			    <th></th>
			  </tr>
			 </thead>
	
	<% @songs.each do |song| %>
	  <tr>
	    <td><%= song.name %></td>
	    <td><%= song.artist %></td>
	    <td><%= song.album %></td>
	    <td><%= song.duration %></td>
	    <td><%= song.reprod %></td>
	    <td><%= link_to 'Show', song %></td>
	    <td><%= link_to 'Edit', edit_song_path(song) %></td>
	    <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	    <td><%= link_to 'Descargar', descargar_path(:id => song.id) %></td>
	    <td><%= link_to 'Play', song.audio.url(:original, false) %></td>
	  </tr>
	<% end %>
	</table>
	
	<br />
	
	<!--<%= link_to 'Subir canción', new_song_path, {:target => "_blank"} %>-->
</div>


