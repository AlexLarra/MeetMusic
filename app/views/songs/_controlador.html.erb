<div>
  <%= "Sonando...#{song.name}" %> <br>

  <%= link_to 'Anterior', play_song_path(prev_song), remote: true, id:"anterior" if prev_song %> |
  <%= link_to 'Siguiente', play_song_path(next_song), remote: true, id:"siguiente" if next_song %><br>
  <%= link_to 'Una aleatoria!', play_song_path(random_song), remote: true, id:"random" %><br>

	<%= audio_tag "#{song.audio.url}", controls: true , id: "audio" , class: "audio", autoplay: true %>
	
</div>